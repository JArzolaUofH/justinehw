        <h3>id <%= person.id %></h3>
        <p>total: <%= person.total %></p>
        <p>totalproducts: <%= person.totalproducts %></p>
        <br />
        <% }); %>
      </div>
    </main>
    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>


